@page
@model CreateModel


@{
    Layout = "_Layout_Castum";
}

@{
    ViewData["Title"] = "وظایف";

}@if (TempData["Error"] != null)
 {
     <div class="alert alert-danger" role="alert">
         <samp>
             @TempData["Error"].ToString()
         </samp>
     </div>
 }

<div class="col-lg-12">
    <div class="portlet box shadow">
        <div class="portlet-heading">
            <div class="portlet-title">
                <h3 class="title">
                    کاربران
                </h3>
            </div><!-- /.portlet-title -->
        </div><!-- /.portlet-heading -->
        <div class="portlet-body">
            <div class="top-buttons-box mb-2">
            </div>
            <div class="row">
                <form enctype="multipart/form-data" id="simple-form" role="form" method="post">
                    <div class="form-body">
                        <div class="form-group">
                            <div class="input-group">
                                <input asp-for="User.Email" class="form-control" type="email" placeholder="آدرس ایمیل" required />
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="input-group">
                                <input asp-for="User.UserName" class="form-control" type="text" placeholder="نام کاربری" />
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="input-group">
                                <input asp-for="User.PasswordHash" class="form-control" type="password" placeholder="کلمه عبور" />
                            </div>
                        </div>


                    </div>
                    <hr>
                    <div class="form-actions">
                        <button type="submit" class="btn btn-success">
                            <i class="icon-check"></i>
                            ذخیره
                        </button>
                        <a asp-page="Index" class="btn btn-warning">
                            بازگشت
                        </a>
                    </div>
                </form>
            </div>
        </div><!-- /.portlet-body -->
    </div><!-- /.portlet -->
</div><!-- /.col-lg-12 -->